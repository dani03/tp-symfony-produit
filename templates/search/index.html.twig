{% extends 'base.html.twig' %}

{% block title %}rechercher un produit !{% endblock %}

{% block body %}


    {% if not produits is defined %}
        <p> aucun produit </p>
    {% else %}
<div class=" d-block row ">
        {% for produit in produits %}
            <div class="card col-md-6 mt-4 ml-4">
                <div class="card-header">
                    {{ produit.name}}
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>{{ produit.description}}</p>
                        <footer class="blockquote-footer">{{ produit.price }} <cite title="Source Title">â‚¬</cite></footer>
                    </blockquote>
                </div>
            </div>
        {% endfor %}
</div>
    {% endif %}
{% endblock %}
